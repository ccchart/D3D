ARCH = intel


#-----	Java Settings  ---------------------------------------------------------

MAKE_JAVAC  	= javac
MAKE_JAVARMIC 	= rmic
MAKE_JFLAGS 	= 

MAKE_JINCLUDES = \
	-I"/cygdrive/c/Program Files/Java/jdk1.5.0_09/include" \
	-I"/cygdrive/c/Program Files/Java/jdk1.5.0_09/include/win32" \

MAKE_JLIBRARIES = \
	-ljvm \


#-----	C++ Compiler Settings  -------------------------------------------------

MAKE_CC  = gcc
MAKE_CPP = g++

MAKE_COPTIBUG = -g -O

MAKE_CFLAGS = \
    -DWIN32 \
    $(MAKE_COPTIBUG) \
    $(MAKE_JINCLUDES) \

MAKE_CLIBS = # nothing special


#-----	Link Loader Settings  --------------------------------------------------

MAKE_LD = g++

MAKE_LDFLAGS = \
    $(MAKE_COPTIBUG) \
    $(MAKE_JLIBRARIES) \

