subroutine getfullversionstring_deltares_hydro(stringout)
   character(*), intent(out) :: stringout
   integer                   :: length

   character(*), parameter :: deltares_hydro_major        = 'VN_MAJOR'
   character(*), parameter :: deltares_hydro_minor        = 'VN_MINOR'
   character(*), parameter :: deltares_hydro_revision     = 'VN_REVISION'
   character(*), parameter :: deltares_hydro_build_number = 'VN_BUILD_NUMBER'

   character(*), parameter :: deltares_hydro_company      = 'Deltares'
   character(*), parameter :: deltares_hydro_company_url  = 'http://www.deltares.nl'
   character(*), parameter :: deltares_hydro_program      = 'Deltares_hydro'

   character(*), parameter :: deltares_hydro_version      = deltares_hydro_major//'.'//deltares_hydro_minor//'.'//deltares_hydro_revision//'.'//deltares_hydro_build_number
   character(*), parameter :: deltares_hydro_version_full = 'Deltares, '//deltares_hydro_program//' Version '//deltares_hydro_version//', '//__DATE__//', '//__TIME__
   character(*), parameter :: deltares_hydro_version_id   = '@(#)'//deltares_hydro_version_full

   !
   ! body
   length    = min(len_trim(deltares_hydro_version_full),len(stringout))
   stringout = deltares_hydro_version_id(5:5+length-1)
end subroutine getfullversionstring_deltares_hydro
