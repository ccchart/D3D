<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Deltares.UGrid</AssemblyName>
    <RootNamespace>Deltares.UGrid</RootNamespace>
    <Company>Deltares</Company>
    <Authors>Deltares</Authors>
    <Description>Package for reading and writing netCdf files using the CF UGrid convention.
(see : http://ugrid-conventions.github.io/ugrid-conventions/ )</Description>
    <Copyright>Deltares 2020</Copyright>
    <PackageProjectUrl>https://oss.deltares.nl/web/delft3dfm</PackageProjectUrl>
    <RepositoryUrl>https://svn.oss.deltares.nl/repos/delft3d/trunk/src/utils_lgpl/io_netcdf</RepositoryUrl>
    <RepositoryType>SVN</RepositoryType>
    <PackageTags>UGrid</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
      <OutputPath>..\io_netcdf\dll\x64\Debug\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Deltares.UGrid.doxygen" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Lib\hdf5.dll">
        <Link>Lib\hdf5.dll</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\hdf5_hl.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\libifcoremd.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\libmmd.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\netcdf.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\ucrtbase.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\vcruntime140.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Lib\zlib1.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>